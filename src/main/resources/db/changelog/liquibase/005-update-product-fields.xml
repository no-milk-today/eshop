<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="add_imgPath_stock_to_products" author="author">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="products" columnName="img_path"/>
            </not>
            <not>
                <columnExists tableName="products" columnName="stock"/>
            </not>
        </preConditions>
        <addColumn tableName="products">
            <column name="img_path" type="varchar(255)"/>
            <column name="stock" type="int">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <rollback>
            <dropColumn tableName="products" columnName="img_path"/>
            <dropColumn tableName="products" columnName="stock"/>
        </rollback>
    </changeSet>

</databaseChangeLog>